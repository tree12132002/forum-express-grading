<div class="card mb-4">
  <div class="row g-0">
    <div class="col-md-4 m-auto d-flex justify-content-center">
      <img src="{{user.image}}" class="img-responsive center-block" style="width: 250px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p><strong>{{user.Comments.length}}</strong> 已評論餐廳</p>
        <p><strong>{{user.FavoritedRestaurants.length}}</strong> 收藏的餐廳</p>
        <p><strong>{{user.Followings.length}}</strong> followings (追蹤者)</p>
        <p><strong>{{user.Followers.length}}</strong> followers (追蹤者)</p>
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary mt-5 mb-3">Edit</button>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <p><strong>{{user.Followings.length}}</strong> followings (追蹤者)</p>
      </div>
      <div class="card-body">
        {{#each user.Followings}}
        <a href="/users/{{this.id}}">
          <img src="{{this.image}}" style="width: 100px;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <p><strong>{{user.Comments.length}}</strong> 已評論餐廳</p>
      </div>
      <div class="card-body">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src="{{this.Restaurant.image}}" style="width: 100px;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <p><strong>{{user.Followers.length}}</strong> followers (追蹤者)</p>
      </div>
      <div class="card-body">
        {{#each user.Followers}}
        <a href="/users/{{this.id}}">
          <img src="{{this.image}}" style="width: 100px;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <p><strong>{{user.FavoritedRestaurants.length}}</strong> 收藏的餐廳</p>
      </div>
      <div class="card-body">
        {{#each user.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}" style="width: 100px;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
